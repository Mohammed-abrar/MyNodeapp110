<html>
<head>
<title>
Conversation App
</title>
<script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.js"> </script>
<script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-route.min.js"> </script>

<script>
var app = angular.module("myApp",  ["ngRoute"]);

app.controller('mycontroller', function($scope,$http) {
	
	$scope.myData = [];
	$http.get('/firstcall').then(function(response){
			$scope.myData.push(response.data);
	});
	
});
</script>
</head>

<body bgcolor="#999966" ng-app="myApp" ng-controller="mycontroller">
<br><br>
<h1 align="center"> Welcome to the chat App </h1>
<br><br>

<form name="myForm" >
<table align="center">
<tr> <td> <textarea rows="15" cols="50"> {{ myData[0] }}  </textarea> </td></tr>
<br>

<tr> <td> <input type="text" / > </td></tr>
</table>
</form>
</body>
</html>


